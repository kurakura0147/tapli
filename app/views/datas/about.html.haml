.header
  .header__left
    .down-menu
      .i.fas.fa-bars
        %ul.child
          %li.child-hidden
          = link_to sample_datas_path do
            %li.child
              how to page
          = link_to root_path do
            %li.child
              menu2
          = link_to root_path do
